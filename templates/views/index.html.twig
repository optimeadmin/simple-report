{% extends '@OptimeSimpleReport/base.html.twig' %}

{% block title %}Reports{% endblock %}
{% block body %}

        <div class="container">
            <h1>Reports</h1>
            <div class="row">
                <table class="table table-striped table-reportes ">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for report in reports %}
                        <tr>
                            <td>
                                {{ report.name }}
                            </td>
                            <td>
                                {% if report.type == 'service' %}
                                    <a href="{{ path('simplereport_from_service',{'slug':report.slug}) }}">Download</a>
                                {% else %}
                                    <a href="{{ path('simplereport_generator',{'slug':report.slug}) }}">Download</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

{% endblock %}